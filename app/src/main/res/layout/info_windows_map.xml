<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="scr cards activities main container">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="7dp"
        app:contentPaddingLeft="10dp"
        app:contentPaddingRight="10dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.artikolevyinf.TextViews.TextView_blue_bold_8
                android:id="@+id/title_card_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textColor="@color/colorBlue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view_map"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="1dp"
                android:background="@color/colorGray"
                app:layout_constraintTop_toBottomOf="@+id/title_card_map"
                tools:layout_editor_absoluteX="3dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/lineColor_map"
                android:layout_width="3dp"
                android:layout_height="26dp"
                android:layout_marginTop="7dp"
                app:cardBackgroundColor="@color/colorBlue"
                app:cardCornerRadius="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_map">

            </androidx.cardview.widget.CardView>

            <com.example.artikolevyinf.TextViews.TextView_blueDark_bold_10
                android:id="@+id/name_card_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"
                android:text="name"
                app:layout_constraintStart_toEndOf="@+id/lineColor_map"
                app:layout_constraintTop_toBottomOf="@+id/view_map" />

            <com.example.artikolevyinf.TextViews.TextView_blueDark_bold_10
                android:id="@+id/address_card_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="address"
                app:layout_constraintStart_toEndOf="@+id/lineColor_map"
                app:layout_constraintTop_toBottomOf="@+id/name_card_map" />

            <com.example.artikolevyinf.TextViews.TextView_blueDark_9
                android:id="@+id/serial_card_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="serial"
                app:layout_constraintStart_toEndOf="@+id/lineColor_map"
                app:layout_constraintTop_toBottomOf="@+id/address_card_map" />

            <com.example.artikolevyinf.TextViews.TextView_blueDark_9
                android:id="@+id/order_card_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="order"
                app:layout_constraintStart_toEndOf="@+id/lineColor_map"
                app:layout_constraintTop_toBottomOf="@+id/serial_card_map" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>