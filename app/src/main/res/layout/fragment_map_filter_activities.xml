<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Fragments.Map.MapFilterActivitiesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="13dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="37dp">

            <com.example.artikolevyinf.TextViews.TextView_blue_12
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta Organizada"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.example.artikolevyinf.TextViews.TextView_red_10
                android:id="@+id/underlineText_filter_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quitar filtro"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="37dp"
                android:layout_marginVertical="16dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:contentPadding="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.example.artikolevyinf.TextViews.TextView_blue_12
                        android:id="@+id/textView_blue_122"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filtros aplicados"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/textView_blue_122">

                        <com.example.artikolevyinf.TextViews.TextView_blueDark_10
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Actividades" />

                        <Button
                            android:id="@+id/btn_scr_filter_map"
                            android:layout_width="40dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"


                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="SCR"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter"/>

                        <Button
                            android:id="@+id/btn_ri_bt_filter_map"
                            android:layout_width="50dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="RI BT"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                        <Button
                            android:id="@+id/btn_ri_mt_filter_map"
                            android:layout_width="50dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="RI MT"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                        <com.example.artikolevyinf.TextViews.TextView_blueDark_10
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Subactividades" />

                        <Button
                            android:id="@+id/btn_suspension_filter_map"
                            android:layout_width="70dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="Suspensión"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                        <Button
                            android:id="@+id/btn_cut_filter_map"
                            android:layout_width="40dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="Corte"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                        <Button
                            android:id="@+id/btn_reconnection_filter_map"
                            android:layout_width="70dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="Reconexión"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                        <com.example.artikolevyinf.TextViews.TextView_blueDark_10
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Estado" />

                        <Button
                            android:id="@+id/btn_todo_filter_map"
                            android:layout_width="60dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="Por hacer"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                        <Button
                            android:id="@+id/btn_executed_filter_map"
                            android:layout_width="70dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="Ejecutadas"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                        <Button
                            android:id="@+id/btn_failed_filter_map"
                            android:layout_width="50dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="1dp"
                            android:layout_marginVertical="5dp"
                            android:background="@drawable/button_blue"

                            android:elevation="10dp"
                            android:stateListAnimator="@null"
                            android:text="Fallidas"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/button_text_size_filter" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/relative_layout_filter_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_filter_cards_activity_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"/>

            <com.example.artikolevyinf.TextViews.TextView_blue_12
                android:id="@+id/tvEmptyActivity_filter_map"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="En este momento no tienes\nactividades."
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>





    </LinearLayout>


</FrameLayout>