<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.artikolevyinf.TextViews.TextView_blue_12
        android:id="@+id/titleFailReasonAlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:text="Razón de actividad fallida"
        android:textColor="@color/colorBlue" />

    <Spinner
        android:id="@+id/fail_reason_activity_spn_fail_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="37dp"
        android:background="@drawable/spinner_shape"
        android:elevation="10dp"/>

    <com.example.artikolevyinf.TextViews.TextView_blue_12
        android:id="@+id/titleWhichReasonAlertDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="37dp"
        android:layout_marginTop="17dp"
        android:text="Cuál"
        android:textColor="@color/colorBlue" />

    <EditText
        android:id="@+id/which_reason_et_fail_alert_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_general"
        android:elevation="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="37dp"

        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textColor="@color/colorBlueDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/negative_action"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="160dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:background="@drawable/button_red"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/positive_action"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="25dp"
            android:layout_weight="1"
            android:text="Terminar"
            android:textSize="@dimen/button_text_size"
            android:textAllCaps="false"
            android:background="@drawable/button_blue"
            android:textColor="@color/colorWhite"
            android:elevation="10dp"
            android:stateListAnimator="@null"/>
    </LinearLayout>

</LinearLayout>